

package xcom.retro.xa.DirectiveChecks ;


import static org.junit.Assert.assertArrayEquals ;

import java.io.IOException ;
import java.util.ArrayList ;
import java.util.Arrays ;
import java.util.Collection ;
import java.util.List ;

import org.junit.BeforeClass ;
import org.junit.Test ;
import org.junit.runner.RunWith ;
import org.junit.runners.Parameterized ;

import xcom.retro.xa.ParsingScaffold ;


@RunWith(Parameterized.class)
public class _Test_DirectiveParsing {

	@Parameterized.Parameters()
	public static Collection<Object[]> data() {

		//@formatter:off

        final Object[][] results = {

                // { String src, String[] expectedContexts }

                { "     .byte z",  		"Statement, Directive, DefinedDirective, ArgumentList, Argument, Expr, Term, Identifier" },
                { "z    .byte z",  		"Statement, Label, Directive, DefinedDirective, ArgumentList, Argument, Expr, Term, Identifier" },
                { "z    .macro z",  	"Statement, Label, Directive, DefinedDirective, ArgumentList, Argument, Expr, Term, Identifier" },
                { "z    .z z",  		"Statement, Label, Directive, MacroInvocation, Symbol, ArgumentList, Argument, Expr, Term, Identifier" },
        } ;

        //@formatter:on

		return (Arrays.asList(results)) ;
	}


	String src ;
	List<String> expectedContexts ;

	static ParsingScaffold parser ;


	public _Test_DirectiveParsing(String src, String expectedContexts) {

		this.src = src ;

		this.expectedContexts = new ArrayList<String>(Arrays.asList(expectedContexts.split(", "))) ;
	}


	@BeforeClass
	public static void setupBeforeEachTest() throws Exception {
		
			parser = new ParsingScaffold() ;
			parser.init("MOS6502") ;
	}


	@Test
	public void parseTest() throws IOException {

		List<String> actual = parser.parse("statement", src).processor().walked() ;
		System.out.println(String.format("%-25s  %s", src, actual)) ;

		assertArrayEquals(expectedContexts.toArray(), actual.toArray()) ;
	}
}
