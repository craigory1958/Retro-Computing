

package xcom.retro.xa.ParsingChecks ;


import static org.junit.Assert.assertArrayEquals ;

import java.io.IOException ;
import java.util.ArrayList ;
import java.util.Arrays ;
import java.util.Collection ;
import java.util.List ;

import org.junit.Before ;
import org.junit.BeforeClass ;
import org.junit.Test ;
import org.junit.runner.RunWith ;
import org.junit.runners.Parameterized ;


@RunWith(Parameterized.class)
public class _Test_BasicStatementParsing_MOS6502 {

	@Parameterized.Parameters()
	public static Collection<Object[]> data() {

		//@formatter:off

        final Object[][] results = {

                // { String uP, String rule, String src, String[] expectedContexts }

                { "     NOP",  		"Statement, Instruction, Opcode, AddressingMode, Implied" },
                { "     LDA #0",  	"Statement, Instruction, Opcode, AddressingMode, Immediate, Argument, Expr, Term, Literal, NumericLiteral, DecimalLiteral" },
                { "abc  LDA #0", 	"Statement, Label, Instruction, Opcode, AddressingMode, Immediate, Argument, Expr, Term, Literal, NumericLiteral, DecimalLiteral" },
                { "abc  NOP",  		"Statement, Label, Instruction, Opcode, AddressingMode, Implied" },

                { "; w/comment",  				"Statement, Instruction, Opcode, AddressingMode, Implied" },
                { "     NOP ; w/comment",  		"Statement, Instruction, Opcode, AddressingMode, Implied" },
                { "     LDA #0 ; w/comment",	"Statement, Instruction, Opcode, AddressingMode, Immediate, Argument, Expr, Term, Literal, NumericLiteral, DecimalLiteral" },
                { "abc  LDA #0 ; w/comment",  	"Statement, Label, Instruction, Opcode, AddressingMode, Immediate, Argument, Expr, Term, Literal, NumericLiteral, DecimalLiteral" },
                { "abc  NOP ; w/comment",  		"Statement, Label, Instruction, Opcode, AddressingMode, Implied" },
        } ;

        //@formatter:on

		return (Arrays.asList(results)) ;
	}


	String src ;
	List<String> expectedContexts ;

	static ParsingScaffold parser ;


	public _Test_BasicStatementParsing_MOS6502(String processor, String src, String expectedContexts) {

		this.src = src ;

		this.expectedContexts = new ArrayList<String>(Arrays.asList(expectedContexts.split(", "))) ;
	}


	@BeforeClass
	public static void setupBeforeEachTest() throws Exception {
		
			parser = new ParsingScaffold() ;
			parser.init("MOS6502") ;
	}


	@Test
	public void parseTest() throws IOException {

		List<String> actual = parser.parse("statement", src).processor.walked ;
		System.out.println(src + " - " + actual) ;

		assertArrayEquals(expectedContexts.toArray(), actual.toArray()) ;
	}
}
